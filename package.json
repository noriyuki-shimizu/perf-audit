{
  "name": "perf-audit-cli",
  "author": "Noriyuki Shimizu",
  "version": "1.0.1",
  "description": "CLI tool for continuous performance monitoring and analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "perf-audit": "dist/bin/cli.js"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noriyuki-shimizu/perf-audit.git"
  },
  "homepage": "https://github.com/noriyuki-shimizu/perf-audit/blob/main/README.md",
  "bugs": {
    "url": "https://github.com/noriyuki-shimizu/perf-audit/issues"
  },
  "keywords": [
    "performance",
    "audit",
    "cli",
    "bundle",
    "analysis",
    "lighthouse"
  ],
  "license": "MIT",
  "scripts": {
    "build": "tsc && npm run copy:dashboard",
    "copy:dashboard": "mkdir -p dist/dashboard/public && cp -r src/dashboard/public/* dist/dashboard/public",
    "dev": "tsc --watch",
    "start": "node dist/bin/cli.js",
    "test": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "dprint fmt",
    "format:check": "dprint check"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.10.0",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^4.0.6",
    "dprint": "^0.50.2",
    "eslint": "^9.0.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "supertest": "^7.1.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.6"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "chalk": "^5.0.0",
    "chokidar": "^4.0.3",
    "chrome-launcher": "^1.1.0",
    "commander": "^14.0.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "gzip-size": "^7.0.0",
    "inquirer": "^12.10.0",
    "lighthouse": "^13.0.1",
    "ora": "^9.0.0",
    "webpack-bundle-analyzer": "^4.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
