{
  "name": "perf-audit-cli",
  "version": "1.0.0",
  "description": "CLI tool for continuous performance monitoring and analysis",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "perf-audit": "./dist/bin/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/bin/cli.js",
    "test": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "dprint fmt",
    "format:check": "dprint check"
  },
  "keywords": [
    "performance",
    "audit",
    "cli",
    "bundle",
    "analysis",
    "lighthouse"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/chokidar": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^20.19.12",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "dprint": "^0.47.0",
    "eslint": "^9.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "better-sqlite3": "^9.0.0",
    "chalk": "^5.0.0",
    "chokidar": "^4.0.3",
    "chrome-launcher": "^1.1.0",
    "commander": "^11.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "gzip-size": "^7.0.0",
    "inquirer": "^9.0.0",
    "lighthouse": "^11.0.0",
    "ora": "^7.0.0",
    "webpack-bundle-analyzer": "^4.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "volta": {
    "node": "22.19.0",
    "npm": "10.9.3"
  }
}
